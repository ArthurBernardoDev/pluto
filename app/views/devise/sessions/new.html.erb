<%= render(HeaderComponent.new()) %>
<div class="sign_in">
  <div class="form">
      <h2>Seja bem vindo !</h2>

      <h2 id="bold">Entrar</h2>

      <% flash.each do |key, value| %>
      <div class="flash <%= key %>"><%= value %></div>
      <% end %>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Digite seu email" %>
        </div>

        <div class="field">
          <%= f.label :Senha %><br />
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "Digite sua senha" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div>
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Login" %>
        </div>
      <% end %>
      

      <%= render "devise/shared/links" %>
  </div>
  <div>
    <img src="/loginImage.svg" alt="image login"/>
  </div>
</div>